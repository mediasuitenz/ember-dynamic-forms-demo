{{#if display}}
  {{#if formElement.help}}
    <div>{{formElement.help}}</div>
  {{/if}}
  {{#each values as |value index|}}
    {{#unless (or value.hidden value.deleted)}}
      {{mediasuite-radio-buttons
        value=value
        inlineGroupLabel=formElement.label
        options=formElement.options
        optionValuePath='value'
        optionLabelPath='label'
        update=(action 'updateState' index)
      }}
      {{#if showDeleteButton}}
        <button {{action 'delete' index}}>Delete</button>
      {{/if}}
    {{/unless}}
  {{/each}}
  {{#if formElement.repeatable}}
    <button {{action 'add'}}>Add</button>
  {{/if}}
{{/if}}
